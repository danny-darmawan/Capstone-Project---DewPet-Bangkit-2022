<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_profile_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_codicon_account" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_data_user"
            android:layout_width="175dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/layout_bg"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile_user"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_user"
            app:layout_constraintTop_toTopOf="@+id/iv_profile_user">

            <TextView
                android:id="@+id/tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="@string/hello"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="@string/input_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_hello"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_features"
            android:layout_width="340dp"
            android:layout_height="239dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="394dp"
            android:background="@drawable/rectangle_bg"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_user">

            <ImageView
                android:id="@+id/iv_dew_adopt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/iv_dew_store"
                app:layout_constraintTop_toBottomOf="@+id/iv_dew_care"
                app:srcCompat="@drawable/dew_adopt" />

            <ImageView
                android:id="@+id/iv_dew_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_dew_consul"
                app:srcCompat="@drawable/dew_store" />

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_dew_tec"
                app:srcCompat="@drawable/ic_settings" />

            <ImageView
                android:id="@+id/iv_dew_consul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dew_consul"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/iv_dew_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="33dp"
                app:layout_constraintStart_toEndOf="@+id/iv_dew_consul"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dew_care" />

            <ImageView
                android:id="@+id/iv_dew_tec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dew_tech" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_tips_for_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/tips_for_you"
            android:textColor="@color/tiffanyBlue_100"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/cl_article"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_features" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_article"
            android:layout_width="340dp"
            android:layout_height="312dp"
            android:layout_marginTop="488dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rectangle_bg"
            app:layoutDescription="@xml/activity_main_xml_cl_article_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/main_article"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/main_article_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/main_article_2"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/main_article_2"
                app:layout_constraintStart_toEndOf="@+id/main_article"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/main_article_3"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/main_article_2"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/second_article_1"
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/secondary_article_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_article" />

            <ImageView
                android:id="@+id/second_article_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/secondary_article_2"
                app:layout_constraintStart_toEndOf="@+id/second_article_1"
                app:layout_constraintTop_toBottomOf="@+id/main_article" />

            <ImageView
                android:id="@+id/article_menu_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="159dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_article"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ellipse_close" />

            <ImageView
                android:id="@+id/article_menu_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="176dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_article"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ellipse_close" />

            <ImageView
                android:id="@+id/article_menu_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="193dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/main_article"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ellipse_close" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>